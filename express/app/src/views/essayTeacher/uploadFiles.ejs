<link rel="stylesheet" href="/public/css/essayTeacher3File.css">

<body>
  <div class="container mt-5">
    <h3 class="mb-4">Tạo Đề Thi Tự Luận</h3>
    <form action="/essay-teacher/api/upload-file-essay-test" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Tiêu đề đề thi</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Nhập tiêu đề đề thi" required>
      </div>

      <div class="mb-3">
        <label for="file" class="form-label">Tải lên file đề thi</label>
        <input type="file" class="form-control" id="file" name="upload-essay" accept=".pdf" required>
      </div>

      <div class="mb-3">
        <label for="grade" class="form-label">Khối</label>
        <select class="form-select" id="grade" name="grade" required>
          <option value="">Chọn khối</option>
          <option value="6">Khối 6</option>
          <option value="7">Khối 7</option>
          <option value="8">Khối 8</option>
          <option value="9">Khối 9</option>
          <option value="10">Khối 10</option>
          <option value="11">Khối 11</option>
          <option value="12">Khối 12</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="subject" class="form-label">Môn học</label>
        <select class="form-select" id="subject" name="subject" required>
          <option value="">Chọn môn học</option>
          <option value="Toán">Toán</option>
          <option value="Vật Lý">Vật Lý</option>
          <option value="Hóa học">Hóa học</option>
          <option value="Ngữ văn">Ngữ văn</option>
          <option value="Lịch sử">Lịch sử</option>
          <option value="Địa lý">Địa lý</option>
          <option value="Tiếng Anh">Tiếng Anh</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Tạo đề</button>
    </form>
  </div>
<script>
  document.getElementById("file").addEventListener("change", function (event) {
    const fileInput = event.target;
    const file = fileInput.files[0];
    const allowedExtension = /\.pdf$/i;

    if (file && !allowedExtension.test(file.name)) {
      alert("Chỉ chấp nhận file .pdf");
      fileInput.value = ""; // Xóa file không hợp lệ
    }
  });
</script>
